{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Разработка ПО",
  "version": "0.1.0",
  "identifier": "com.softwaredev.application",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Разработка ПО",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self' http://192.168.1.67:8080 http://192.168.1.67:9000; img-src 'self' http://192.168.1.67:8080 http://192.168.1.67:9000 data: blob:; connect-src 'self' http://192.168.1.67:8080 http://192.168.1.67:9000"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}